# ============================================================================
# MASSAGEVERMITTLER - Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in the actual values for your environment.
# Never commit .env.local to version control.
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these values from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# STRIPE CONFIGURATION
# ============================================================================
# Get these from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================================================
# GOOGLE MAPS CONFIGURATION
# ============================================================================
# Get this from Google Cloud Console
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# ============================================================================
# NOTIFICATION SERVICES
# ============================================================================
# SendGrid for email notifications
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@example.com

# Twilio for WhatsApp/SMS notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# The public URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Deployment environment (development, staging, production)
NODE_ENV=development

# ============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# ============================================================================
# Sentry (error tracking) - optional
NEXT_PUBLIC_SENTRY_DSN=

# PostHog (analytics) - optional
NEXT_PUBLIC_POSTHOG_KEY=

# ============================================================================
# NOTES
# ============================================================================
# - NEXT_PUBLIC_* variables are exposed to the browser, keep them non-sensitive
# - Service secrets (like STRIPE_SECRET_KEY) should NEVER be public
# - For local development, create .env.local and fill in test/development keys
# - For production, use proper secret management (Vercel, AWS Secrets Manager, etc.)
# ============================================================================
